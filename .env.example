# Lab Document Intelligence System - Environment Configuration
# HIPAA-Compliant Document Processing
#
# IMPORTANT: Copy this file to .env and configure with your values
# NEVER commit .env file to version control

# ========== Environment ==========
ENVIRONMENT=development
DEBUG=true

# ========== Application ==========
APP_NAME="Lab Document Intelligence System"
APP_VERSION="1.0.0"
SECRET_KEY=your-secret-key-change-this-in-production

# ========== Database ==========
# Azure SQL Database connection string
# Format: mssql+pyodbc://user:password@server.database.windows.net/database?driver=ODBC+Driver+17+for+SQL+Server
DATABASE_URL=mssql+pyodbc://username:password@server.database.windows.net/dbname?driver=ODBC+Driver+17+for+SQL+Server

# ========== Azure Storage ==========
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=yourstorageaccount;AccountKey=yourkey;EndpointSuffix=core.windows.net
AZURE_STORAGE_CONTAINER=documents
BLOB_SAS_EXPIRY_HOURS=1

# ========== Azure Key Vault ==========
AZURE_KEY_VAULT_URL=https://your-keyvault.vault.azure.net/
ENCRYPTION_KEY_NAME=phi-encryption-key

# ========== Azure OpenAI ==========
AZURE_OPENAI_ENDPOINT=https://your-openai-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-azure-openai-api-key
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4-vision
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# ========== Authentication ==========
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
SESSION_TIMEOUT_MINUTES=15

# ========== Azure AD ==========
AZURE_AD_TENANT_ID=your-tenant-id
AZURE_AD_CLIENT_ID=your-client-id
AZURE_AD_CLIENT_SECRET=your-client-secret

# ========== Security ==========
ALLOWED_ORIGINS=["http://localhost:8000","https://your-app.azurewebsites.net"]
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_MINUTES=30
PASSWORD_MIN_LENGTH=12

# ========== Document Processing ==========
MAX_FILE_SIZE_MB=25
SUPPORTED_FILE_TYPES=[".pdf",".tiff",".tif",".png",".jpg",".jpeg"]
AUTO_APPROVE_THRESHOLD=0.90
URGENT_REVIEW_THRESHOLD=0.70

# ========== Lab Integration ==========
LAB_SYSTEM_API_URL=https://lab-system.example.com/api
LAB_SYSTEM_API_KEY=your-lab-system-api-key
LAB_SUBMISSION_RETRIES=3
LAB_RETRY_BACKOFF_SECONDS=[1,2,4]

# ========== Compliance ==========
AUDIT_LOG_RETENTION_DAYS=2555
DOCUMENT_RETENTION_DAYS=2555
PHI_ACCESS_ALERT_THRESHOLD=50

# ========== Email Alerts ==========
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=alerts@example.com
SMTP_PASSWORD=your-smtp-password
ADMIN_EMAIL=admin@example.com
